<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            android:textSize="30dp"
            android:fontFamily="@font/gmarketbold"
            android:text="LOGIN" />
        <EditText
            android:id="@+id/id_input"
            android:layout_width="800px"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gmarketmedium"
            android:hint="ID를 입력해주세요."
            android:inputType="text" />
        <EditText
            android:id="@+id/pwd_input"
            android:layout_width="800px"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gmarketmedium"
            android:hint="비밀번를 입력해주세요."
            android:inputType="textPassword"/>
        <Button
            android:id="@+id/login_btn"
            android:layout_width="700px"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/gmarketmedium"
            android:textColor="#ffffff"
            android:background="@drawable/blue_btn"
            android:text="LOGIN" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/go_join_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gmarketmedium"
                android:background="#00ffffff"
                android:textColor="#494847"
                android:text="회원가입"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textStyle="bold"
                android:text="/"/>
            <Button
                android:id="@+id/go_find_idpw_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gmarketmedium"
                android:background="#00ffffff"
                android:textColor="#494847"
                android:text="ID/PW 찾기"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
