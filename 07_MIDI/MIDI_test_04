# value = integer value for a note (0 - 11)
# octave = octave value where the central octave is 5
# midi_number = MIDI value for the pitch (ex. value + (octave * 12))
# dur = the note value as float point
# volume = MIDI voluem value (0 - 127)
# verbose = string format <note>, <octave>, <duration>
from __future__ import division
from pyknon.genmidi import Midi
from pyknon.music import NoteSeq

def demo():
    notes1 = Noteseq("D4 F#8 A Bb4")
    notes2 = Noteseq([Note(2, dur = 1/4), Note(6, dur = 1/8), Note(9, dur = 1/8), Note(10, dur = 1/4)])
    midi = Midi(number_tracks = 2, tempo = 90)
    midi.seq_notes(notes1, track = 0)
    midi.seq_notes(notes2, trakc = 1)
    midi.write("demo_test_04.mid")
